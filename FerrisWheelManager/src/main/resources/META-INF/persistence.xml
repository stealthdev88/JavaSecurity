<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="fwm">
        <jta-data-source>jdbc/mysqlfwm</jta-data-source>
        <class>de.dominikschadow.fwm.session.User</class>
        <class>de.dominikschadow.fwm.FerrisWheel</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.target-database" value="MySQL4"/>
        </properties>
    </persistence-unit>
</persistence>